import Jetson.GPIO as GPIO

# print(GPIO.JETSON_INFO)
# print(GPIO.VERSION)

import time 

# pin definition
led_pin_red =7
led_green = 11
led_blue = 19

l1 = 38

GPIO.setmode(GPIO.BOARD)
GPIO.setup(l1, GPIO.OUT, initial=GPIO.HIGH)
GPIO.setup(led_pin_red, GPIO.OUT, initial=GPIO.LOW)
GPIO.setup(led_green, GPIO.OUT, initial=GPIO.HIGH)
GPIO.setup(led_blue, GPIO.OUT, initial=GPIO.LOW)

print("press ctrl + c to stop blinking")


while True:
    # time.sleep(2)
    GPIO.output(led_green, GPIO.HIGH)
    print("Green Go")
    time.sleep(7)
    GPIO.output(led_green, GPIO.LOW)
    GPIO.output(led_blue, GPIO.HIGH)
    print('wait ...')
    time.sleep(2)
    GPIO.output(led_blue, GPIO.LOW)
    # time.sleep(1)
    GPIO.output(led_pin_red, GPIO.HIGH)
    print("Halt Red")
    time.sleep(5)
    GPIO.output(led_pin_red, GPIO.LOW)
